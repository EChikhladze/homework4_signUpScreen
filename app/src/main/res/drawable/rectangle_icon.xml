<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="rectangle" >
            <corners
                android:radius="10dp" />
            <gradient
                android:type="linear"
                android:angle="180"
                android:startColor="@color/icon_gradient_start"
                android:endColor="@color/icon_gradient_end"
                />
        </shape>
    </item>

    <item android:top="20dp">
        <shape>
            <corners android:radius="10dp"/>
            <solid android:color="@color/shadow"></solid>
        </shape>

    </item>
</layer-list>